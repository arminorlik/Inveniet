<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/lay"
              xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="fill_parent"
              android:background="#000000"
              android:orientation="vertical"
              tools:context=".MapActivity"

    >

    <ImageView
        android:id="@+id/adView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/bannerpromotion"/>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="-10dp"
        android:orientation="vertical">

        <fragment
            android:id="@+id/map"
            android:name="com.google.android.gms.maps.SupportMapFragment"

            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            />

        <RelativeLayout

            android:id="@+id/layMapInfo"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="4"
            android:background="#60628B"
            android:orientation="vertical">



            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginLeft="110dp"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tvNazwaMap"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_centerHorizontal="true"

                    android:text="Ciekaw promocji?"

                    android:textColor="#ffff950e"
                    android:textSize="55dp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/tvTypMap"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center"
                    android:layout_marginTop="-5dp"
                    android:text="Wybierz miejsce \nklikając pinezkę na mapie"
                    android:textColor="#FFFFFF"
                    android:textSize="30dp"
                    />
            </LinearLayout>


            <!-- <TextView
                 android:id="@+id/tvAdresMap"
                 android:layout_below="@+id/tvTypMap"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_centerHorizontal="true"
                 android:text="rtetetertertert"
                 android:textColor="#ff000000"
                 android:textSize="10dp"
                 />-->
            <ImageView
                android:id="@+id/ivMini"
                android:layout_width="150dp"
                android:layout_height="120dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"

                />

        </RelativeLayout>


    </LinearLayout>
</LinearLayout>


