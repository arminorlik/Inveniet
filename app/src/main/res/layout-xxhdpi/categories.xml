<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#05A383"
              android:orientation="vertical"
              tools:context=".MainActivity">
    //belka Jedzenie i picie
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#60628B"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"

            android:text="Jedzenie i Picie"
            android:textColor="#FFFFFFFF"
            android:textSize="25dp"
            android:textStyle="bold"
            />
    </RelativeLayout>

    //ikony jedzenie i picie
<LinearLayout
    android:id="@+id/LayoutFood"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:weightSum="4"
    android:layout_marginTop="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1"

        >

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:background="@drawable/ic_action_restaurant"
            android:layout_gravity="center_horizontal"
            android:layout_marginRight="5dp"
            android:id="@+id/btnRest"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:text="Restauracja"
            android:textColor="#FFFFFFFF"
            android:textSize="15dp"
            android:layout_gravity="center_horizontal"
            />


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1"

        >

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:background="@drawable/ic_action_coffee"
            android:layout_gravity="center_horizontal"
            android:layout_marginRight="5dp"
            android:id="@+id/btnKawiarnia"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:text="Kawiarnia"
            android:textColor="#FFFFFFFF"
            android:textSize="15dp"
            android:layout_gravity="center_horizontal"
            />
</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1"

        >

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:background="@drawable/ic_action_filter"
            android:layout_gravity="center_horizontal"
            android:id="@+id/btnBar"
            android:layout_marginRight="5dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:text="Bar"
            android:layout_gravity="center_horizontal"
            android:textColor="#FFFFFFFF"
            android:textSize="15dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1"

        >

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:background="@drawable/ic_action_basket"
            android:layout_gravity="center_horizontal"
            android:id="@+id/btnFastFood"
            android:layout_marginRight="5dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:text="FastFood"
            android:textColor="#FFFFFFFF"
            android:textSize="15dp"
            android:layout_gravity="center_horizontal"
            />
    </LinearLayout>
</LinearLayout>

    //belka Zabawa
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        android:background="#A94345"
        android:orientation="vertical">



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Zabawa"
            android:textColor="#FFFFFFFF"
            android:textSize="25dp"
            android:textStyle="bold"
            />
    </RelativeLayout>


    //ikony zabawa
    <LinearLayout
        android:id="@+id/LayoutFun"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="4"
        android:layout_marginTop="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"

            >

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:background="@drawable/ic_action_volume_up"
                android:layout_gravity="center_horizontal"
                android:id="@+id/btnKlub"
                android:layout_marginRight="5dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:text="Klub"
                android:textColor="#FFFFFFFF"
                android:textSize="15dp"
                android:layout_gravity="center_horizontal"
                />


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"

            >

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:background="@drawable/ic_action_users"
                android:layout_gravity="center_horizontal"
                android:id="@+id/btnImpreza"
                android:layout_marginRight="5dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:text="Impreza"
                android:textColor="#FFFFFFFF"
                android:textSize="15dp"
                android:layout_gravity="center_horizontal"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"

            >

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:background="@drawable/ic_action_headphones"
                android:layout_gravity="center_horizontal"
                android:id="@+id/btnMuzyka"
                android:layout_marginRight="5dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:text="Muzyka"
                android:layout_gravity="center_horizontal"
                android:textColor="#FFFFFFFF"
                android:textSize="15dp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"

            >

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:background="@drawable/ic_action_guitar"
                android:layout_gravity="center_horizontal"
                android:id="@+id/btnKoncert"
                android:layout_marginRight="5dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:text="Koncert"
                android:textColor="#FFFFFFFF"
                android:textSize="15dp"
                android:layout_gravity="center_horizontal"
                />
        </LinearLayout>
    </LinearLayout>
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:orientation="vertical" ><![CDATA[    >

]]></LinearLayout>


    <ImageView
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:src="@drawable/slogan_white"
        android:gravity="center|bottom"
        android:layout_marginBottom="100dp"
        android:layout_gravity="center_horizontal"
        />
</LinearLayout>
